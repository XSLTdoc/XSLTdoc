<?xml version="1.0" encoding="UTF-8"?>
<XSLTdocConfig>
  <Title>My project</Title>
  <Introduction>
    <p>
      Describe your project here, using standard XHTML.
    </p>
  </Introduction>

  <!--
    The path to the target directory for the documentation.
    Relative paths are relative to this config file.
   -->
  <TargetDirectory path="doc"/>

  <!--
    The path to the source directory, where the XSLT source files can be
    found. If relative, it is relative to this config file.
   -->
  <SourceDirectory path="."/>

  <!--
    List of XSLT files to be documented.
    Only stylesheets which are not included by another
    have to be listed here. The included stylesheets
    are found automatically by following the include or
    the import statements in the including stylesheet.
    These paths are relative to the SourceDirectory
    defined above.
   -->
  <RootStylesheets>
    <File href="test.xsl"/>
  </RootStylesheets>

  <!--
    A list of CSS Stylesheet files which should be added to the standard CSS file
    included (XSLTdoc.css). This is optional. The media attribute is also optional.
  <AdditionalCSS>
    <File href="print.css" media="print"/>
  </AdditionalCSS>
  -->
</XSLTdocConfig>
